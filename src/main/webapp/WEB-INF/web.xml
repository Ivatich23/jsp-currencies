<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.0">
    <welcome-file-list>
        <welcome-file>currencies.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>exchangeRates</servlet-name>
       <jsp-file>/exchangeRates.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>exchangeRates</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>convert</servlet-name>
        <jsp-file>/convert.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>convert</servlet-name>
        <url-pattern>/convert</url-pattern>
    </servlet-mapping>
</web-app>